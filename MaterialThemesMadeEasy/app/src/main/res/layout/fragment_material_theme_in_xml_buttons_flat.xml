<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/CardStyle.Home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/material_theme_buttons_flat"
            android:textAppearance="@style/TextStyle.Title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_medium"
            android:text="@string/material_theme_default"
            android:textAppearance="@style/TextStyle.Body2"/>

        <Button
            style="@style/ButtonStyle.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_small"
            android:text="@string/material_theme_current_theme"/>

        <Button
            style="@style/ButtonStyle.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_small"
            android:text="@string/material_theme_green_theme"
            android:theme="@style/AppTheme.Green"/>

        <Button
            style="@style/ButtonStyle.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_small"
            android:text="@string/material_theme_blue_theme"
            android:theme="@style/AppTheme.Blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_medium"
            android:text="@string/material_theme_colored_text"
            android:textAppearance="@style/TextStyle.Body2"/>

        <Button
            style="@style/ButtonStyle.Borderless.ColoredText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_small"
            android:text="@string/material_theme_current_theme"/>

        <Button
            style="@style/ButtonStyle.Borderless.ColoredText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_small"
            android:text="@string/material_theme_green_theme"
            android:theme="@style/AppTheme.Green"/>

        <Button
            style="@style/ButtonStyle.Borderless.ColoredText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/material_element_spacing_small"
            android:text="@string/material_theme_blue_theme"
            android:theme="@style/AppTheme.Blue"/>
    </LinearLayout>
</android.support.v7.widget.CardView>